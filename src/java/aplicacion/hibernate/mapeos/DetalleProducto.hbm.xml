<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="aplicacion.modelo.dominio.DetalleProducto" catalog="jugueteria" table="detalle_producto"
         optimistic-lock="version">
      <id name="codigoDetalle" type="integer">
          <column name="detprod_codigo" length="10"/>
          <generator class="identity"/>
      </id>
      
      <property name="cantidadVendida" type="integer">
          <column name="detprod_cantidad_vendida" not-null="true"/>
      </property>
      
      <property name="precioTotal" type="double">
          <column name="detprod_precio_total" not-null="true"/>
      </property>
      
      <property name="productoVendido" type="string">
          <column name="detprod_producto_vendido" not-null="true"/>
      </property>
      
      <property name="usuarioComprador" type="string">
          <column name="detprod_usuario_comprador" not-null="true"/>
      </property>
      
  </class>
</hibernate-mapping>
